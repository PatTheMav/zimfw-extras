(( ${+commands[openssl]} )) || { echo "${0} requires openssl." ; return 1 }
if (( ${#} < 1 )); then
  print "usage: ${0} FILE [TARGET]" >&2
  return 1
fi

SOURCE_FILE=${1}
TARGET_FILE=${2:-${1//.enc/}}

#openssl enc -aes-256-cbc -d -pbkdf2 -iter 20000 -md sha512 -in ${SOURCE_FILE} -out ${TARGET_FILE}
openssl enc -aes-256-cbc -d -md sha512 -in ${SOURCE_FILE} -out ${TARGET_FILE}
